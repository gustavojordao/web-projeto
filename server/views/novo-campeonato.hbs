<!DOCTYPE html>
<html>
  <head>
    <title>Libertadêro</title>
    <meta charset="utf-8"/></meta>
    <link rel="stylesheet" href="../css/comum.css"/>
    <link rel="stylesheet" href="../css/novo-campeonato.css"/>
  </head>
  <body>
    <header>
		  <img src="../img/logo.png"/> LIBERTADÊRO
    </header>
    {{#if error}}
      <section class="messagebar error">
        {{error}}
      </section>
    {{/if}}
    {{#if success}}
      <section class="messagebar success">
        {{success}}
      </section>
    {{/if}}
    <nav>
      <form id="menu" name="menu" method="GET">
        <section id="inicial" class="menuitem">
          Página Inicial
        </section>
        <section id="campeonatos" class="menuitem">
          Campeonatos
        </section>
        <section id="perfil" class="menuitem">
            Perfil
        </section>
      </form>
    </nav>
    <article id="texto">
      <form id="formcampeonato" method='POST'>
        Nome do campeonato: <input id="nome" name="nome"/><br/><br/>
        Número de participantes: <input id="numero" name="numero" value="2" type="number" disabled="true"/>
        <section id="botoesnumero">
          <input id="numero-up" type="button" value="+"/>
          <input id="numero-down" type="button" value="-"/><br/><br/>
        </section>

        <section id="add-times">
          Times não adicionados <br/>
          <select id="naoadicionados">
            <option>---Nenhum---</option>
            {{#each times}}
            <option values="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </section>
        <section>
          Times adicionados <br/>
          <select id="adicionados">
            <option>---Nenhum---</option>
          </select>
        </section>
        <button id="botaocriar">Criar</button>
      </form>
      <!--<section>
        <button id="sortear">Sortear times restantes</button>
      </section>-->
    </article>

    <script src="../js/comum.js"></script>
    <script src="../js/novo-campeonato.js"></script>
  </body>
</html>
