<!DOCTYPE html>
<html>
  <head>
    <title>Libertadêro</title>
    <meta charset="utf-8"/></meta>
    <link rel="stylesheet" href="../css/comum.css"/>
    <link rel="stylesheet" href="../css/ver-campeonato.css"/>
  </head>
  <body>
    <header>
		  <img src="../img/logo.png"/> LIBERTADÊRO
    </header>
    <nav>
      <form id="menu" name="menu" method="GET">
        <section id="inicial" class="menuitem">
          Página Inicial
        </section>
        <section id="campeonatos" class="menuitem">
          Campeonatos
        </section>
        <section id="perfil" class="menuitem">
            Perfil
        </section>
      </form>
    </nav>
    <article class="ladoalado">
      <section>
        Participantes
        <ul>
          {{#each campeonato.times}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </section>
      <section>
        Partidas
        <form id="tabela" name="tabela" method="POST">
          <table>
            <thead>
              <tr>
                <th>Time 1</th>
                <th>Placar</th>
                <th>Time 2</th>
                <th>Fase</th>
                <th><div id="add" class="botao add"></div></th>
              </tr>
            </thead>
            <tbody>
              {{#each campeonato.jogos}}
              <tr><td>{{time1}}</td><td>{{placarTime1}}x{{placarTime2}}</td><td>{{time2}}</td><td>{{fase}}</td><td><div id="edit{{@index}}" class="botao edit"></div><div id="delete{{@index}}" class="botao delete"></div></td></tr>
              {{/each}}
              <input id="index" name="index" type="hidden" value=""/>
            </tbody>
          </table>
        </form>
      </section>
    </article>
    <script src="../js/comum.js"></script>
    <script src="../js/alterar-campeonato.js"></script>
  </body>
</html>
