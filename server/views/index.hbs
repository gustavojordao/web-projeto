            <input id="botao-logout" type="button" value="Logout"/><br/>
          </secion>
        {{else}}
          <section id="antes">
            Usuário: <input id="usuario" name="usuario"/><br/>
            Senha: <input id="password" name="password" type="password"/><input id="botao-login" type="button" value="Login"/><br/>
